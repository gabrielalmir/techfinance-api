# TechFinance API - Variáveis de Ambiente

# Porta do servidor
PORT=3000

# Token de autorização (Bearer)
AUTHORIZATION=your_secret_token_here

# URL de conexão com o banco de dados
DATABASE_URL=postgresql://username:password@localhost:5432/techfinance

# Chave da API OpenAI (para funcionalidades de IA)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Ambiente de execução
NODE_ENV=development

# Configurações de log
LOG_LEVEL=info

# Timeout para consultas (em segundos)
QUERY_TIMEOUT=30

# Configurações de cache
CACHE_TTL=300

# URL base da aplicação (para documentação)
APP_URL=http://localhost:3000
